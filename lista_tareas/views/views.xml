    <!-- Top menu item -->

    <menuitem name="lista_tareas" id="lista_tareas.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="lista_tareas.menu_1" parent="lista_tareas.menu_root"/>

    <!-- actions -->
    <menuitem name = "Mostrar lista" id="lista_tareas.menu_1_list" parent="lista_tareas.menu_1" action="lista_tareas.action_window">
  </data>
</odoo>
