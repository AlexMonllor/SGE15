<odoo>
    <!-- Vista de formulario para Metge -->
    <record id="view_metge_form" model="ir.ui.view">
        <field name="name">metge.form</field>
        <field name="model">hospital.metge</field>
        <field name="arch" type="xml">
            <form string="Metge">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="num_colegiat"/>
                    </group>
                    <notebook>
                        <page string="Visites realitzades">
                            <field name="visita_ids">
                                <tree>
                                    <field name="pacient_id"/>
                                    <field name="diagnostic"/>
                                    <field name="data_visita"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista para Metge -->
    <record id="view_metge_tree" model="ir.ui.view">
        <field name="name">metge.tree</field>
        <field name="model">hospital.metge</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="num_colegiat"/>
            </tree>
        </field>
    </record>
</odoo>
