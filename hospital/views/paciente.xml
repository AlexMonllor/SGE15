<odoo>
    <!-- Vista de formulario para Pacient -->
    <record id="view_pacient_form" model="ir.ui.view">
        <field name="name">pacient.form</field>
        <field name="model">hospital.pacient</field>
        <field name="arch" type="xml">
            <form string="Pacient">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="simptomes"/>
                    </group>
                    <notebook>
                        <page string="Visites">
                            <field name="visita_ids">
                                <tree>
                                    <field name="metge_id"/>
                                    <field name="diagnostic"/>
                                    <field name="data_visita"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista para Pacient -->
    <record id="view_pacient_tree" model="ir.ui.view">
        <field name="name">pacient.tree</field>
        <field name="model">hospital.pacient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="simptomes"/>
            </tree>
        </field>
    </record>
</odoo>
